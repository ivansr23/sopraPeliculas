<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id ="pelicula" class="com.sopra.peliculas.model.entities.Pelicula" scope="prototype">
	</bean>
	
	<bean id="mapaDePeliculas" class="java.util.HashMap">
		<constructor-arg>
			<map key-type="java.lang.String" value-type="com.sopra.peliculas.model.entities.Pelicula">
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="miDaoDePeliculas" class="com.sopra.peliculas.dao.PeliculasDAOImpl">
		<constructor-arg name="miMapDePeliculas" ref="mapaDePeliculas"></constructor-arg>
	</bean>
	
	<bean id ="gestorPelicula" class="com.sopra.peliculas.model.bussines.GestorPeliculas" scope="singleton">
		<constructor-arg name="miDaoDePeliculas" ref="miDaoDePeliculas"></constructor-arg>
	</bean>
	
	<bean id = "arraysDePeliculas" class="java.util.ArrayList">
	</bean>
	
	<bean id = "arraysDeIntegers"  class="java.util.ArrayList">
	</bean>

</beans>
